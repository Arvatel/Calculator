<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonNumberStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorMain</item>
        <item name="fontFamily">@font/news_cycle</item>
        <item name="android:editTextBackground">@color/colorMain</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="ButtonOperationStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorMain</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/news_cycle</item>
        <item name="android:editTextBackground">@color/colorMain</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorMain</item>
        <item name="fontFamily">@font/news_cycle</item>
        <item name="android:clickable">false</item>
        <item name="android:editTextBackground">@color/colorMain</item>
        <item name="android:textSize">25dp</item>

    </style>

</resources>
